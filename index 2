    <script>
        // Configuration
        const SHEET_CSV_URL = "https://docs.google.com/spreadsheets/d/e/2PACX-1vQLFIrS6ggAD0Fa9AWiot2UJdohBYZCJ63tAGTgIu2ESSd0gzrgBQG_znUXkXJEBSHAcQmjeRmRnpPW/pub?gid=240868577&single=true&output=csv";
        const DATE_FORMAT = { year: 'numeric', month: 'long' };
// Global variables
        let rawData = [];
        let filteredData = [];
        let currentSort = { column: 'date', direction: 'desc' };
        let revenueChart, spendChart, ordersChart, roasChart, sourcePieChart, monthlyTrendsChart;
        let isRevenueStacked = true;
        let isOrdersStacked = true;

        // DOM Elements
        const loadingOverlay = document.querySelector('.loading-overlay');
        const dateRangeSelect = document.getElementById('date-range');
        const customDateRange = document.getElementById('custom-date-range');
            const startMonthInput = document.getElementById('start-month');
            const endMonthInput = document.getElementById('end-month');
const sourceFilter = document.getElementById('source-filter');
        const themeToggle = document.getElementById('theme-toggle');
        const tableSearch = document.getElementById('table-search');
        const tableBody = document.getElementById('table-body');
        const toggleRevenueStack = document.getElementById('toggle-revenue-stack');
        const toggleOrdersStack = document.getElementById('toggle-orders-stack');

        // Initialize the dashboard
        document.addEventListener('DOMContentLoaded', async () => {
            // Initialize feather icons
            feather.replace();
            
            // Set up event listeners
            setupEventListeners();
            
            // Load data
            await loadData();
            
            // Initial render
            applyFilters();
        });

        function setupEventListeners() {
            // Date range selector
            dateRangeSelect.addEventListener('change', function() {
                if (this.value === 'custom') {
                    customDateRange.classList.remove('hidden');
            // Set default month range to last 6 full months
            const now = new Date();
            const end = new Date(now.getFullYear(), now.getMonth(), 1); // first of current month
            const start = new Date(now.getFullYear(), now.getMonth() - 5, 1); // 6 months incl current
            startMonthInput.value = `${start.getFullYear()}-${String(start.getMonth()+1).padStart(2,'0')}`;
            endMonthInput.value = `${end.getFullYear()}-${String(end.getMonth()+1).padStart(2,'0')}`;
} else {
                    customDateRange.classList.add('hidden');
                }
                applyFilters();
            });
            // Custom month inputs
            startMonthInput.addEventListener('change', applyFilters);
            endMonthInput.addEventListener('change', applyFilters);
// Source filter
            sourceFilter.addEventListener('change', applyFilters);

            // Theme toggle
            themeToggle.addEventListener('click', toggleTheme);

            // Table search
            tableSearch.addEventListener('input', applyFilters);

            // Sortable table headers
            document.querySelectorAll('.sortable').forEach(header => {
                header.addEventListener('click', () => {
                    const column = header.dataset.sort;
                    if (currentSort.column === column) {
                        currentSort.direction = currentSort.direction === 'asc' ? 'desc' : 'asc';
                    } else {
                        currentSort.column = column;
                        currentSort.direction = 'asc';
                    }
                    applyFilters();
                });
            });

            // Chart toggles
            toggleRevenueStack.addEventListener('click', () => {
                isRevenueStacked = !isRevenueStacked;
                updateRevenueChart();
            });

            toggleOrdersStack.addEventListener('click', () => {
                isOrdersStacked = !isOrdersStacked;
                updateOrdersChart();
            });
        }

        function toggleTheme() {
            const currentTheme = document.body.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            document.body.setAttribute('data-theme', newTheme);
            
            // Update charts for theme change
            updateCharts();
            
            // Update feather icons
            feather.replace();
        }

        async function loadData() {
            try {
                showLoading();
                
                if (!SHEET_CSV_URL || SHEET_CSV_URL === "PASTE_HERE") {
                    throw new Error("Please set the SHEET_CSV_URL variable to your Google Sheet CSV export URL");
                }
                
                const response = await fetch(SHEET_CSV_URL);
                const csvData = await response.text();
                rawData = parseCSV(csvData);
                
                // Process data
                rawData.forEach(item => {
                    item.date = new Date(item.date);
                    item.spend = parseFloat(item.spend) || 0;
                    item.revenue = parseFloat(item.revenue) || 0;
                    item.orders = parseInt(item.orders) || 0;
                    
                    // Calculate derived metrics
                    item.roas = item.spend > 0 ? item.revenue / item.spend : 0;
                    item.aov = item.orders > 0 ? item.revenue / item.orders : 0;
                });
                
                hideLoading();
            } catch (error) {
                hideLoading();
                alert(`Error loading data: ${error.message}`);
                console.error(error);
            }
        }

        function parseCSV(csv) {
            const lines = csv.split('\n');
            const headers = lines[0].split(',').map(h => h.trim().toLowerCase());
            
            return lines.slice(1).map(line => {
                const values = line.split(',');
                const row = {};
                
                headers.forEach((header, index) => {
                    // Handle cases where the value might be wrapped in quotes
                    let value = values[index] || '';
                    if (value.startsWith('"') && value.endsWith('"')) {
                        value = value.slice(1, -1);
                    }
                    row[header] = value.trim();
                });
                
                return row;
            }).filter(row => row.date); // Filter out empty rows
        }

        function applyFilters() {
            if (rawData.length === 0) return;
            
            // Get filter values
            const dateRange = dateRangeSelect.value;
            const source = sourceFilter.value;
            const searchTerm = tableSearch.value.toLowerCase();
            
            // Filter by date range
            let startDate, endDate = new Date();
            endDate.setHours(23, 59, 59, 999); // End of day
            
            if (dateRange === 'custom') {
                startDate = new Date(startMonthInput.value + '-01');
                endDate = new Date(endMonthInput.value + '-01');
                // Set to last day of month
                endDate.setMonth(endDate.getMonth() + 1);
                endDate.setDate(0);
                endDate.setHours(23, 59, 59, 999);
} else if (dateRange === 'ytd') {
                startDate = new Date(new Date().getFullYear(), 0, 1);
            } else {
                const months = parseInt(dateRange);
                const now = new Date();
                endDate = new Date(now.getFullYear(), now.getMonth() + 1, 0, 23, 59, 59, 999); // last day of current month
                startDate = new Date(now.getFullYear(), now.getMonth() - (months - 1), 1); // first day of earliest included month
}
            
            // Filter data
            filteredData = rawData.filter(item => {
                // Date filter
                if (item.date < startDate || item.date > endDate) return false;
                
                // Source filter
                if (source !== 'all' && item.source !== source) return false;
                
                // Search filter
                if (searchTerm && !(
                    item.date.toLocaleDateString().toLowerCase().includes(searchTerm) ||
                    item.source.toLowerCase().includes(searchTerm) ||
                    item.spend.toString().includes(searchTerm) ||
                    item.revenue.toString().includes(searchTerm) ||
                    item.orders.toString().includes(searchTerm)
                )) return false;
                
                return true;
            });
            
            // Sort data
            filteredData.sort((a, b) => {
                let comparison = 0;
                
                if (currentSort.column === 'date') {
                    comparison = a.date - b.date;
                } else if (currentSort.column === 'source') {
                    comparison = a.source.localeCompare(b.source);
                } else {
                    comparison = a[currentSort.column] - b[currentSort.column];
                }
                
                return currentSort.direction === 'asc' ? comparison : -comparison;
            });
            
            // Update UI
            updateKPICards();
            updateTable();
            updateCharts();
        }

        function updateKPICards() {
            if (filteredData.length === 0) {
                // Reset all KPIs to 0
                document.getElementById('total-revenue').textContent = '$0';
                document.getElementById('total-spend').textContent = '$0';
                document.getElementById('total-orders').textContent = '0';
                document.getElementById('roas').textContent = '0.00';
                document.getElementById('aov').textContent = '$0';
                document.getElementById('cac').textContent = '$0';
                
                // Reset all change indicators
                document.querySelectorAll('.kpi-change span').forEach(el => el.textContent = '0%');
                document.querySelectorAll('.kpi-change i').forEach(el => el.classList.add('hidden'));
                
                return;
            }
            
            // Calculate totals
            const totalRevenue = filteredData.reduce((sum, item) => sum + item.revenue, 0);
            const totalSpend = filteredData.reduce((sum, item) => sum + item.spend, 0);
            const totalOrders = filteredData.reduce((sum, item) => sum + item.orders, 0);
            
            // Calculate metrics
            const roas = totalSpend > 0 ? totalRevenue / totalSpend : 0;
            const aov = totalOrders > 0 ? totalRevenue / totalOrders : 0;
            const cac = totalOrders > 0 ? totalSpend / totalOrders : 0;
            
            // Update KPI cards
            document.getElementById('total-revenue').textContent = formatCurrency(totalRevenue);
            document.getElementById('total-spend').textContent = formatCurrency(totalSpend);
            document.getElementById('total-orders').textContent = totalOrders.toLocaleString();
            document.getElementById('roas').textContent = roas.toFixed(2);
            document.getElementById('aov').textContent = formatCurrency(aov);
            document.getElementById('cac').textContent = formatCurrency(cac);
            
            // Calculate previous period for comparison
            const dateRange = dateRangeSelect.value;
            let comparisonStartDate, comparisonEndDate = new Date();
            
            if (dateRange === 'custom') {
                const startDate = new Date(startDateInput.value);
                const endDate = new Date(endDateInput.value);
                    const durationMonths = (endDate.getFullYear() - startDate.getFullYear()) * 12 + endDate.getMonth() - startDate.getMonth();
                
                    comparisonEndDate = new Date(startDate);
                    comparisonEndDate.setMonth(comparisonEndDate.getMonth() - 1);
                    comparisonStartDate = new Date(comparisonEndDate);
                    comparisonStartDate.setMonth(comparisonStartDate.getMonth() - durationMonths);
} else if (dateRange === 'ytd') {
                const currentYear = new Date().getFullYear();
                comparisonStartDate = new Date(currentYear - 1, 0, 1);
                comparisonEndDate = new Date(currentYear - 1, 11, 31);
            } else {
                const months = parseInt(dateRange);
                comparisonEndDate = new Date();
                comparisonEndDate.setMonth(comparisonEndDate.getMonth() - 1);
                comparisonStartDate = new Date(comparisonEndDate);
                comparisonStartDate.setMonth(comparisonStartDate.getMonth() - months);
}
            
            // Get comparison data
            const comparisonData = rawData.filter(item => 
                item.date >= comparisonStartDate && item.date <= comparisonEndDate
            );
            
            // Calculate comparison totals
            const comparisonRevenue = comparisonData.reduce((sum, item) => sum + item.revenue, 0);
            const comparisonSpend = comparisonData.reduce((sum, item) => sum + item.spend, 0);
            const comparisonOrders = comparisonData.reduce((sum, item) => sum + item.orders, 0);
            
            // Calculate comparison metrics
            const comparisonRoas = comparisonSpend > 0 ? comparisonRevenue / comparisonSpend : 0;
            const comparisonAov = comparisonOrders > 0 ? comparisonRevenue / comparisonOrders : 0;
            const comparisonCac = comparisonOrders > 0 ? comparisonSpend / comparisonOrders : 0;
            
            // Calculate percentage changes
            const revenueChange = comparisonRevenue ? ((totalRevenue - comparisonRevenue) / comparisonRevenue) * 100 : 0;
            const spendChange = comparisonSpend ? ((totalSpend - comparisonSpend) / comparisonSpend) * 100 : 0;
            const ordersChange = comparisonOrders ? ((totalOrders - comparisonOrders) / comparisonOrders) * 100 : 0;
            const roasChange = comparisonRoas ? ((roas - comparisonRoas) / comparisonRoas) * 100 : 0;
            const aovChange = comparisonAov ? ((aov - comparisonAov) / comparisonAov) * 100 : 0;
            const cacChange = comparisonCac ? ((cac - comparisonCac) / comparisonCac) * 100 : 0;
            
            // Update change indicators
            updateChangeIndicator('revenue', revenueChange);
            updateChangeIndicator('spend', spendChange);
            updateChangeIndicator('orders', ordersChange);
            updateChangeIndicator('roas', roasChange);
            updateChangeIndicator('aov', aovChange);
            updateChangeIndicator('cac', cacChange);
            
            // Update summary metrics
            document.getElementById('avg-roas').textContent = roas.toFixed(2);
            document.getElementById('avg-aov').textContent = formatCurrency(aov);
            document.getElementById('avg-cac').textContent = formatCurrency(cac);
            
            // Update progress bars (normalized to show relative performance)
            const maxRoas = Math.max(roas, comparisonRoas, 5); // Cap at 5x ROAS for visualization
            const maxAov = Math.max(aov, comparisonAov, 200); // Cap at $200 AOV for visualization
            const maxCac = Math.max(cac, comparisonCac, 50); // Cap at $50 CAC for visualization
            
            document.getElementById('roas-bar').style.width = `${(roas / maxRoas) * 100}%`;
            document.getElementById('aov-bar').style.width = `${(aov / maxAov) * 100}%`;
            document.getElementById('cac-bar').style.width = `${(cac / maxCac) * 100}%`;
        }

        function updateChangeIndicator(metric, change) {
            const changeElement = document.getElementById(`${metric}-change`);
            const upArrow = document.getElementById(`${metric}-up`);
            const downArrow = document.getElementById(`${metric}-down`);
            
            changeElement.textContent = `${Math.abs(change).toFixed(1)}%`;
            
            if (change > 0) {
                changeElement.classList.add('positive');
                changeElement.classList.remove('negative');
                upArrow.classList.remove('hidden');
                downArrow.classList.add('hidden');
            } else if (change < 0) {
                changeElement.classList.add('negative');
                changeElement.classList.remove('positive');
                upArrow.classList.add('hidden');
                downArrow.classList.remove('hidden');
            } else {
                changeElement.classList.remove('positive', 'negative');
                upArrow.classList.add('hidden');
                downArrow.classList.add('hidden');
            }
        }

        function updateTable() {
            tableBody.innerHTML = '';
            
            if (filteredData.length === 0) {
                const row = document.createElement('tr');
                row.innerHTML = '<td colspan="7" class="text-center py-4">No data available for the selected filters</td>';
                tableBody.appendChild(row);
                return;
            }
            
            filteredData.forEach(item => {
                const row = document.createElement('tr');
                row.className = 'hover:bg-gray-50 dark:hover:bg-gray-700';
                
                row.innerHTML = `
                    <td>${item.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long' })}</td>
<td class="capitalize">${item.source}</td>
                    <td class="text-right">${formatCurrency(item.spend)}</td>
                    <td class="text-right">${formatCurrency(item.revenue)}</td>
                    <td class="text-right">${item.orders}</td>
                    <td class="text-right">${item.roas.toFixed(2)}</td>
                    <td class="text-right">${formatCurrency(item.aov)}</td>
                `;
                
                tableBody.appendChild(row);
            });
        }

        function updateCharts() {
            if (filteredData.length === 0) {
                // Clear all charts if no data
                if (revenueChart) revenueChart.destroy();
                if (spendChart) spendChart.destroy();
                if (ordersChart) ordersChart.destroy();
                if (roasChart) roasChart.destroy();
                if (sourcePieChart) sourcePieChart.destroy();
                if (monthlyTrendsChart) monthlyTrendsChart.destroy();
                
                return;
            }
            // Group data by month and source for charts
                const months = [...new Set(filteredData.map(item => 
                    `${item.date.getFullYear()}-${String(item.date.getMonth() + 1).padStart(2, '0')}`
                ))].sort();
                
                const googleData = {};
                const metaData = {};
                const shopifyData = {};
                
                months.forEach(month => {
                    googleData[month] = { revenue: 0, spend: 0, orders: 0 };
                    metaData[month] = { revenue: 0, spend: 0, orders: 0 };
                    shopifyData[month] = { revenue: 0, spend: 0, orders: 0 };
                });
                
                filteredData.forEach(item => {
                    const monthKey = `${item.date.getFullYear()}-${String(item.date.getMonth() + 1).padStart(2, '0')}`;
if (item.source === 'google') {
                    googleData[dateKey].revenue += item.revenue;
                    googleData[dateKey].spend += item.spend;
                    googleData[dateKey].orders += item.orders;
                } else if (item.source === 'meta') {
                    metaData[dateKey].revenue += item.revenue;
                    metaData[dateKey].spend += item.spend;
                    metaData[dateKey].orders += item.orders;
                } else if (item.source === 'shopify') {
                    shopifyData[dateKey].revenue += item.revenue;
                    shopifyData[dateKey].spend += item.spend;
                    shopifyData[dateKey].orders += item.orders;
                }
            });
            
            // Prepare chart data
            const formattedMonths = months.map(month => {
                const [year, monthNum] = month.split('-');
                return new Date(year, monthNum - 1).toLocaleDateString('en-US', { year: 'numeric', month: 'short' });
            });
            const googleRevenue = months.map(month => googleData[month].revenue);
            const metaRevenue = months.map(month => metaData[month].revenue);
            const shopifyRevenue = months.map(month => shopifyData[month].revenue);
            
            const googleSpend = months.map(month => googleData[month].spend);
            const metaSpend = months.map(month => metaData[month].spend);
            
            const googleOrders = months.map(month => googleData[month].orders);
            const metaOrders = months.map(month => metaData[month].orders);
            const shopifyOrders = months.map(month => shopifyData[month].orders);
            
            const googleRoas = months.map(month => googleData[month].spend > 0 ? googleData[month].revenue / googleData[month].spend : 0);
            const metaRoas = months.map(month => metaData[month].spend > 0 ? metaData[month].revenue / metaData[month].spend : 0);
// Update or create charts
            updateRevenueChart();
            updateSpendChart();
            updateOrdersChart();
            updateRoasChart();
            updateSourcePieChart();
            updateMonthlyTrendsChart();
            
            function updateRevenueChart() {
                const ctx = document.getElementById('revenue-chart').getContext('2d');
                
                if (revenueChart) revenueChart.destroy();
                
                revenueChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                    labels: formattedMonths,
datasets: [
                            {
                                label: 'Google Revenue',
                                data: googleRevenue,
                                borderColor: '#4f46e5',
                                backgroundColor: 'rgba(79, 70, 229, 0.1)',
                                tension: 0.3,
                                fill: isRevenueStacked ? 'origin' : false
                            },
                            {
                                label: 'Meta Revenue',
                                data: metaRevenue,
                                borderColor: '#3b82f6',
                                backgroundColor: 'rgba(59, 130, 246, 0.1)',
                                tension: 0.3,
                                fill: isRevenueStacked ? 'origin' : false
                            },
                            {
                                label: 'Shopify Revenue',
                                data: shopifyRevenue,
                                borderColor: '#10b981',
                                backgroundColor: 'rgba(16, 185, 129, 0.1)',
                                tension: 0.3,
                                fill: isRevenueStacked ? 'origin' : false
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'top',
                                labels: {
                                    color: getComputedStyle(document.body).getPropertyValue('--text-color')
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return `${context.dataset.label}: ${formatCurrency(context.raw)}`;
                                    }
                                }
                            }
                        },
                        scales: {
                            x: {
                                grid: {
                                    color: getComputedStyle(document.body).getPropertyValue('--border-color')
                                },
                                ticks: {
                                    color: getComputedStyle(document.body).getPropertyValue('--text-color')
                                }
                            },
                            y: {
                                grid: {
                                    color: getComputedStyle(document.body).getPropertyValue('--border-color')
                                },
                                ticks: {
                                    color: getComputedStyle(document.body).getPropertyValue('--text-color'),
                                    callback: function(value) {
                                        return formatCurrency(value);
                                    }
                                }
                            }
                        },
                        interaction: {
                            intersect: false,
                            mode: 'index'
                        },
                        stacked: isRevenueStacked
                    }
                });
            }
            
